<h2>Welcome to PizzaShop</h2>
<div class="row">
    <% @products.each do |p| %>
        <div class="col-md-3">
            <div>
                <%= p.title %>
            </div>
            <div>
                <img src="<%= p.path_to_image %>" />
            </div>
            <div>
                <%= p.description %>
            </div>
            <div>
                <%= p.price %>
            </div>
            <div>
                <%= p.size %>
            </div>
            <div>
                <button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)">Add to cart</button>
            </div>
        </div>
    <% end %>
</div>
<button class="btn btn-primary" onclick="something()">Click Me</button>




<script>

function something () {
    alert('Hello');
}


</script>
