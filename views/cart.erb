<h2>Welcome to PizzaShop</h2>



<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>
    </tr>
  </thead>
  <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price*item[1].to_i %>
    <% total_qty += item[1].to_i %>
    <% end %>
    <tr>
      <td></td>
      <td>Total: <%= total_price %></td>
      <td>Total: <%= total_qty %></td>
    </tr>
         
  </tbody>
</table>

<form action="/place_order" method="POST">
  <input type="hidden" name="order[orders_input]" value="<%= @orders_input %>" />
  <div class="form-group">
    <label>Name: </label>
    <input type="text" class="form-control" name="order[name]" placeholder="Your name" value="<%= @clientname %>">
  </div>
  <div class="form-group">
    <label>Phone: </label>
    <input type="text" class="form-control" name="order[phone]" placeholder="your phone" value="<%= @userphone %>">
  </div>
  <div class="form-group">
    <label>Phone: </label>
    <textarea type="text" class="form-control" name="order[address]" placeholder="Your address" value="<%= @userphone %>">
    </textarea>
  </div>
  <button type="submit" class="btn btn-prymary">Place this order</button>
  <button class="btn btn-danger" onclick="return cancel_order()">Cancel</button>

</form>

